<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotesActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notes_title"
        android:text="Notes"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="34sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notes_subtitle"
        android:text="Personal Messages To You"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/notes_title"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/image1"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/notes_subtitle"
        android:backgroundTint="@color/grey"
        android:background="@drawable/rounded_button"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image1_name_age"
        android:text="Meena, 23"
        app:layout_constraintBottom_toBottomOf="@id/image1"
        app:layout_constraintStart_toStartOf="@id/image1"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="36dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image1_notes"
        android:text="Tap to review 50+ notes"
        app:layout_constraintBottom_toBottomOf="@id/image1"
        app:layout_constraintStart_toStartOf="@id/image1"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/interested_tv"
        android:text="Interested In You."
        app:layout_constraintStart_toStartOf="@id/image1_name_age"
        app:layout_constraintTop_toBottomOf="@id/image1"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/premium_tv"
        android:text="Premium Members Can\nview all their likes at once"
        app:layout_constraintStart_toStartOf="@id/image1_name_age"
        app:layout_constraintTop_toBottomOf="@id/interested_tv"
        android:layout_marginTop="8dp"
        android:textColor="@color/grey"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:backgroundTint="#FFFF00"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/interested_tv"
        android:id="@+id/continue_btn"
        android:text="Upgrade"
        tools:text="Upgrade"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:id="@+id/image2"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/grey"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/premium_tv"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toStartOf="@id/image3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image2_name"
        android:text="Teena"
        app:layout_constraintBottom_toBottomOf="@id/image2"
        app:layout_constraintStart_toStartOf="@id/image2"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:id="@+id/image3"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/grey"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toBottomOf="@id/premium_tv"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image3_name"
        android:text="Beena"
        app:layout_constraintBottom_toBottomOf="@id/image3"
        app:layout_constraintStart_toStartOf="@id/image3"
        android:layout_marginStart="16dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemTextColor="@drawable/selector"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_nav"/>

</androidx.constraintlayout.widget.ConstraintLayout>